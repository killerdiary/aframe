<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="appBackground">@color/theme_bg</item>
        <item name="appThemeColor">@color/colorPrimary</item>
        <item name="appTitleSize">@dimen/txt_big</item>
        <item name="appTitleColor">@color/white</item>
        <item name="appTitleBarBg">@color/colorPrimary</item>
        <item name="appProgressColor">@color/theme</item>
        <item name="android:listDivider">@drawable/divider_bg</item>
    </style>

    <style name="txtDefaultStyle" parent="AppBaseTheme.TxtStyle">
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:textSize">@dimen/txt_default</item>
    </style>

    <style name="txtDefaultGrayStyle" parent="txtDefaultStyle">
        <item name="android:textColor">@color/txt_gray</item>
    </style>

    <style name="txtWhiteStyle" parent="txtDefaultStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="txtGrayStyle" parent="txtDefaultStyle">
        <item name="android:textColor">@color/txt_gray</item>
    </style>

    <style name="txtSmallStyle" parent="txtDefaultStyle">
        <item name="android:textSize">@dimen/txt_small</item>
    </style>

    <style name="txtSmallGrayStyle" parent="txtSmallStyle">
        <item name="android:textColor">@color/txt_gray</item>
    </style>


    <style name="txtSmallGrayLightStyle" parent="txtSmallGrayStyle">
        <item name="android:textColor">@color/txt_gray_light</item>
    </style>

    <style name="txtSmallWhiteStyle" parent="txtSmallStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="txtMediumStyle" parent="txtDefaultStyle">
        <item name="android:textSize">@dimen/txt_medium</item>
    </style>

    <style name="editStyle" parent="AppBaseTheme.EditStyle">
        <item name="android:background">@drawable/edit_selector</item>
        <item name="android:singleLine">true</item>
        <item name="android:minHeight">@dimen/edit_height</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:textColor">@color/txt_edit_selector</item>
        <item name="android:textColorHint">@color/txt_gray_light</item>
    </style>

    <style name="btnStyle" parent="AppBaseTheme.BtnStyle">
        <item name="android:background">@drawable/btn_selector</item>
        <item name="android:minWidth">0dip</item>
        <item name="android:minHeight">@dimen/btn_height</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="progressbarHorizontalStyle">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_horizontal</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:minHeight">1dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>
</resources>
