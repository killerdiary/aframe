<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/recycler_refreshview_i_txtMessage"
        style="@style/AppBaseTheme.TxtStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:minHeight="80dp"
        android:text="header"
        android:textColor="@color/red" />

    <com.hy.frame.widget.WaterDropView
        android:id="@+id/recycler_refreshview_i_vWater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:wdvMaxCircleRadius="20dp"
        app:wdvBottomCircleX="2dp"
        app:wdvWaterDropColor="@color/theme" />
</RelativeLayout>