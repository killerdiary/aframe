<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/base_llyLoad"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <com.hy.frame.widget.AVLoadingIndicatorView
        android:id="@+id/base_proLoading"
        android:layout_width="48dip"
        android:layout_height="48dip"
        app:indicatorColor="@color/theme"
        app:indicatorName="BallTrianglePathIndicator" />

    <ImageView
        android:id="@+id/base_imgMessage"
        style="@style/AppBaseTheme.ImageStyle"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/def_empty"
        android:visibility="gone" />

    <TextView
        android:id="@+id/base_txtMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_default"
        android:gravity="center"
        android:text="@string/loading"
        android:textColor="@color/txt_gray"
        android:textSize="@dimen/txt_small" />

</LinearLayout>