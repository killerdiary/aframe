<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/theme_bg</item>
    </style>

    <style name="txtDefaultStyle">
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:textSize">@dimen/txt_default</item>
    </style>

    <style name="txtBlueStyle">
        <item name="android:textColor">@color/txt_blue</item>
        <item name="android:textSize">@dimen/txt_default</item>
    </style>

    <style name="txtMediumStyle">
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:textSize">@dimen/txt_medium</item>
    </style>

    <style name="txtSmallStyle">
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:textSize">@dimen/txt_small</item>
    </style>

    <style name="txtSmallWhiteStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/txt_small</item>
    </style>

    <style name="txtSmallGrayStyle">
        <item name="android:textColor">@color/txt_gray</item>
        <item name="android:textSize">@dimen/txt_small</item>
    </style>

    <style name="txtDefaultGrayStyle">
        <item name="android:textColor">@color/txt_gray</item>
        <item name="android:textSize">@dimen/txt_default</item>
    </style>

    <style name="txtWhiteStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/txt_default</item>
    </style>

    <style name="txtWhiteBigStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/txt_big</item>
    </style>

    <style name="txtBlackBigStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/txt_big</item>
    </style>

    <style name="txtWhiteMediumStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/txt_medium</item>
    </style>

    <style name="txtWhiteSmallStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/txt_small</item>
    </style>

    <style name="DialogTheme" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>

        <!-- 边框 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

</resources>