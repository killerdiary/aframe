<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <!--<style name="AppBaseTheme" parent="Base.Theme.AppCompat">-->
    <style name="AppBaseTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/theme_bg</item>
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:textColorPrimary">@color/txt_black</item>
        <item name="android:textColorHighlight">@color/txt_gray_light</item>
        <item name="android:textColorHint">@color/txt_gray</item>
        <item name="android:textColorLink">@color/txt_blue</item>
        <item name="android:textSize">@dimen/txt_default</item>
        <item name="android:textStyle">normal</item>

        <item name="colorControlHighlight">@color/btn_highlight</item>
        <item name="toolbarStyle">@style/CurToolbar</item>
        <item name="appHeaderHeight">@dimen/header_height</item>
        <item name="appBackground">@color/theme_bg</item>
        <item name="appThemeColor">@color/theme</item>
        <item name="appTitleSize">@dimen/txt_big</item>
        <item name="appTitleColor">@color/white</item>
        <item name="appTitleBarBg">@color/theme</item>
        <item name="appLoadingDraw">@drawable/rotate_loading_circle</item>
        <item name="appLoadingSmallDraw">@drawable/rotate_loading_circle</item>
        <!--标题栏颜色-->
        <item name="colorPrimary">?attr/appThemeColor</item>
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">?attr/appThemeColor</item>
        <item name="colorAccent">@color/white</item>
        <item name="background">?attr/appBackground</item>
    </style>

    <style name="CurToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <!-- 设置该属性解决空白部分-->
    </style>

    <style name="txtDefaultStyle">
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:textSize">@dimen/txt_default</item>

    </style>

    <style name="txtBlueStyle">
        <item name="android:textColor">@color/txt_blue</item>
        <item name="android:textSize">@dimen/txt_default</item>
    </style>

    <style name="txtMediumStyle">
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:textSize">@dimen/txt_medium</item>
    </style>

    <style name="txtBigStyle">
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:textSize">@dimen/txt_big</item>
    </style>

    <style name="txtSmallStyle">
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:textSize">@dimen/txt_small</item>
    </style>

    <style name="txtSmallWhiteStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/txt_small</item>
    </style>

    <style name="txtSmallGrayStyle">
        <item name="android:textColor">@color/txt_gray</item>
        <item name="android:textSize">@dimen/txt_small</item>
    </style>

    <style name="txtDefaultGrayStyle">
        <item name="android:textColor">@color/txt_gray</item>
        <item name="android:textSize">@dimen/txt_default</item>
    </style>

    <style name="txtWhiteStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/txt_default</item>
    </style>

    <style name="txtWhiteBigStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/txt_big</item>
    </style>

    <style name="txtBlackBigStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/txt_big</item>
    </style>

    <style name="txtWhiteMediumStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/txt_medium</item>
    </style>

    <style name="txtWhiteSmallStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/txt_small</item>
    </style>

    <style name="DialogTheme" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>

        <!-- 边框 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

</resources>