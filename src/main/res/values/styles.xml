<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--<style name="AppBaseTheme" parent="Base.Theme.AppCompat">-->
    <style name="AppBaseTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/theme_bg</item>
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:textColorPrimary">@color/txt_black</item>
        <item name="android:textColorHighlight">@color/txt_gray_light</item>
        <item name="android:textColorHint">@color/txt_gray</item>
        <item name="android:textColorLink">@color/txt_blue</item>
        <item name="android:textSize">@dimen/txt_default</item>
        <item name="android:textStyle">normal</item>

        <item name="colorControlHighlight">@color/btn_highlight</item>
        <item name="toolbarStyle">@style/AppBaseTheme.CurToolbar</item>
        <item name="appHeaderHeight">@dimen/header_height</item>
        <item name="appBackground">@color/theme_bg</item>
        <item name="appThemeColor">@color/theme</item>
        <item name="appTitleSize">@dimen/txt_big</item>
        <item name="appTitleColor">@color/white</item>
        <item name="appTitleBarBg">@color/theme</item>
        <item name="appLoadingDraw">@drawable/rotate_loading_circle</item>
        <item name="appLoadingSmallDraw">@drawable/rotate_loading_circle</item>
        <!--标题栏颜色-->
        <item name="colorPrimary">?attr/appThemeColor</item>
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">?attr/appThemeColor</item>
        <item name="colorAccent">@color/white</item>
        <item name="background">?attr/appBackground</item>
    </style>

    <style name="AppBaseTheme.CurToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <!-- 设置该属性解决空白部分-->
    </style>

    <style name="AppBaseTheme.TxtStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:textSize">@dimen/txt_default</item>
    </style>

    <style name="AppBaseTheme.EditStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:textColorHint">@color/txt_gray_light</item>
    </style>

    <style name="AppBaseTheme.BtnStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@null</item>
        <item name="android:minWidth">0dip</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppBaseTheme.DialogTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>

        <!-- 边框 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <style name="AVLoadingIndicatorView">
        <item name="minWidth">48dip</item>
        <item name="maxWidth">48dip</item>
        <item name="minHeight">48dip</item>
        <item name="maxHeight">48dip</item>
        <item name="indicatorName">LineSpinFadeLoaderIndicator</item>
    </style>

    <style name="AVLoadingIndicatorView.Large">
        <item name="minWidth">72dip</item>
        <item name="maxWidth">72dip</item>
        <item name="minHeight">72dip</item>
        <item name="maxHeight">72dip</item>
        <item name="indicatorName">LineSpinFadeLoaderIndicator</item>
    </style>

    <style name="AVLoadingIndicatorView.Small">
        <item name="minWidth">36dip</item>
        <item name="maxWidth">36dip</item>
        <item name="minHeight">36dip</item>
        <item name="maxHeight">36dip</item>
        <item name="indicatorName">LineSpinFadeLoaderIndicator</item>
    </style>
</resources>