<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--<style name="AppBaseTheme" parent="Base.Theme.AppCompat">-->
    <!--<style name="AppBaseTheme" parent="Theme.AppCompat.NoActionBar">-->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorPrimary">@color/txt_black</item>
        <item name="android:textColorHighlight">@color/txt_gray_light</item>
        <item name="android:textColorHint">@color/txt_gray</item>
        <item name="android:textColorLink">@color/blue</item>
        <item name="android:textAppearance">@style/AppBaseTheme.TxtStyle</item>
        <item name="toolbarStyle">@style/AppBaseTheme.CurToolbar</item>
        <item name="appHeaderHeight">@dimen/header_height</item>
        <item name="appBackground">@color/whitesmoke</item>
        <item name="appThemeColor">@color/colorPrimary</item>
        <item name="appTitleSize">@dimen/txt_title</item>
        <item name="appTitleColor">@color/white</item>
        <item name="appTitleBarBg">?attr/appThemeColor</item>
        <item name="appProgressColor">@color/blue</item>
        <!--标题栏颜色-->
        <item name="colorPrimary">?attr/appThemeColor</item>
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">?attr/appThemeColor</item>
        <!--控制各个控件被选中时的颜色-->
        <item name="colorAccent">?attr/appThemeColor</item>
        <!--控件的默认色调-->
        <item name="colorControlNormal">@color/white</item>
        <!--控件激活时候的色调-->
        <item name="colorControlActivated">@color/white</item>
        <!--控件高亮-->
        <item name="colorControlHighlight">@color/btn_highlight</item>
        <!--按钮默认状态下的背景色-->
        <item name="colorButtonNormal">?attr/appThemeColor</item>
        <item name="android:windowBackground">?attr/appBackground</item>
    </style>

    <style name="AppBaseTheme.CurToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <!-- 设置该属性解决空白部分-->
    </style>

    <style name="AppBaseTheme.TxtStyle">
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:textColorHint">@color/txt_gray</item>
        <item name="android:textColorHighlight">@color/txt_gray_light</item>
        <item name="android:textColorLink">@color/blue</item>
        <item name="android:textSize">@dimen/txt_default</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppBaseTheme.EditStyle" parent="AppBaseTheme.TxtStyle">
        <item name="android:hint">@string/edit_input_hint</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:textColorHint">@color/txt_gray_light</item>
    </style>

    <style name="AppBaseTheme.BtnStyle">
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:minWidth">0dip</item>
        <item name="android:minHeight">@dimen/btn_height</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:textColor">@color/txt_black</item>
    </style>

    <style name="AppBaseTheme.DialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <style name="AVLoadingIndicatorView">
        <item name="minWidth">48dip</item>
        <item name="maxWidth">48dip</item>
        <item name="minHeight">48dip</item>
        <item name="maxHeight">48dip</item>
        <item name="indicatorName">LineSpinFadeLoaderIndicator</item>
    </style>

    <style name="AVLoadingIndicatorView.Large">
        <item name="minWidth">72dip</item>
        <item name="maxWidth">72dip</item>
        <item name="minHeight">72dip</item>
        <item name="maxHeight">72dip</item>
        <item name="indicatorName">LineSpinFadeLoaderIndicator</item>
    </style>

    <style name="AVLoadingIndicatorView.Small">
        <item name="minWidth">36dip</item>
        <item name="maxWidth">36dip</item>
        <item name="minHeight">36dip</item>
        <item name="maxHeight">36dip</item>
        <item name="indicatorName">LineSpinFadeLoaderIndicator</item>
    </style>

    <style name="animBottomInBottomOutStyle">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="AppBaseTheme.ImageStyle">
        <item name="android:contentDescription">image</item>
    </style>
</resources>